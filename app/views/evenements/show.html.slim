- model_class = @evenement.class
div class="page-header"
  h1
    =t '.title', :default => model_class.model_name.human

  dl class="dl-horizontal"
  dt
    strong
      = model_class.human_attribute_name(:title)
  dd 
    = @evenement.title
  dt
    strong
      = model_class.human_attribute_name(:content)
  dd
    = @evenement.content
  dt
    strong
      = model_class.human_attribute_name(:place)
  dd
    = @evenement.place
  dt
    strong
      = model_class.human_attribute_name(:date)
  dd
    = @evenement.date

div class="form-actions"
  = link_to t('.back', :default => t("helpers.links.back")),
              evenements_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")),
              edit_evenement_path(@evenement), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")),
              evenement_path(@evenement),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger'
